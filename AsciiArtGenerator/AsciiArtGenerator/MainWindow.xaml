<Window x:Class="AsciiArtGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsciiArtGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left">
                <Button x:Name="bSelectPicture" Content="Select Picture" Click="BSelectPicture_Click"/>
                <Button x:Name="bGenerateAscii" Content="Generate Ascii" Click="BGenerateAscii_Click"/>
            </StackPanel>
            <Image x:Name="iSelectedPicture"/>
        </DockPanel>
    </Grid>
</Window>
